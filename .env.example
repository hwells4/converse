# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Session Security (REQUIRED - Generate a secure random string for production)
SESSION_SECRET="your-super-secure-random-string-for-production-change-this"

# AWS Configuration (Required for S3 document storage)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_S3_BUCKET="your_s3_bucket_name"

# External Service Webhooks
PDF_PARSER_WEBHOOK_URL="https://your-pdf-parser-service.example.com/webhook"
EXPECTED_LAMBDA_WEBHOOK_SECRET="your_webhook_security_secret"

# N8N Integration (Required for Salesforce uploads)
N8N_WEBHOOK_URL="https://your-n8n-instance.com/webhook/salesforce-upload"
COMMISSION_CORRECTION_WEBHOOK_URL="https://your-n8n-instance.com/webhook/commission-correction"

# Email Configuration (Required for password resets and invitations)
SMTP_HOST="your_smtp_host"
SMTP_PORT="587"
SMTP_USER="your_smtp_username"
SMTP_PASS="your_smtp_password"
SMTP_SECURE="false"
FROM_NAME="Converse AI Hub"

# Application URLs
CLIENT_URL="https://your-production-domain.com"
WEBHOOK_BASE_URL="https://your-production-domain.com"

# Optional: Development/Debug Settings
NODE_ENV="production"